---
import "../styles/global.css";

type LayoutProps = {
  title: string;
};

const { title } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Jhofran B. | Portafolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@300;400;500;600;700&family=VT323&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body class="min-h-screen flex flex-col px-5">
    <header class="border-b-1 border-dotted border-[#B9B28A] py-2">
      <h1 class="font-[VT323] font-medium">
        <span class="text-[#B9B28A]"> title:</span>
        <span class="text-[#123458]">
          $(<span class="text-[#2DAA9E]">jhofran.b</span>)
        </span>
      </h1>
    </header>
    <main
      class="flex-auto border border-dotted border-[#B9B28A] rounded-lg my-4"
    >
      <slot />
    </main>
    <footer
      class="border-t-1 border-dotted border-[#B9B28A] flex justify-between py-2"
    >
      <div class="flex font-[VT323] font-medium">
        <p>social</p>
        <ul class="flex text-[#123458]">
          {": "}
          $(
          <li><a class="text-[#2DAA9E]" href="">github</a></li>,
          <li><a class="text-[#2DAA9E]" href=""> linkedin</a></li>
          )
        </ul>
      </div>
      <p class="font-[VT323] font-medium">
        <span class="text-[#B9B28A]">version:</span>
        <span class="text-[#123458]">
          $(<span class="text-[#2DAA9E]">0.1.0</span>)
        </span>
      </p>
    </footer>
  </body>
</html>
