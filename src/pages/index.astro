---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="h-[100%] flex flex-col p-1">
    <figure class="flex justify-center p-1 border border-[#507687]">
      <img class="h-28" src="/mi-portada.png" alt="Imagen de portada" />
    </figure>
    <article class="flex-auto flex justify-center items-center">
      <ul
        class="text-center text-[#384B70] text-lg font-[Rajdhani] font-black uppercase"
      >
        <li
          class="border border-[#507687] mb-1 p-1 cursor-pointer hover:border-[#B8001F] hover:text-[#B8001F]"
        >
          <a href="">Sobre mi</a>
        </li>
        <li
          class="border border-[#507687] mb-1 p-1 cursor-pointer hover:border-[#B8001F] hover:text-[#B8001F]"
        >
          <a href="">Proyectos</a>
        </li>
        <li
          class="border border-[#507687] mb-1 p-1 cursor-pointer hover:border-[#B8001F] hover:text-[#B8001F]"
        >
          <a href="">Blog</a>
        </li>
        <li
          class="border border-[#507687] mb-1 p-1 cursor-pointer hover:border-[#B8001F] hover:text-[#B8001F]"
        >
          <a href="">Trabajemos juntos</a>
        </li>
      </ul>
    </article>
  </section>
</Layout>
